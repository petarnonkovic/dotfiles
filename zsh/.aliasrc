# Shortcuts
alias vi=vim
alias nvi=nvim
alias fdl='fd -l'
alias y=yarn
alias _=sudo
alias sed='sed -E'
alias less='less -R'
alias h=history
alias hsi='history | grep -i'

# Global shortcuts
alias -g F='| fzf'
alias -g G='| grep'
alias -g L='| less'
alias -g H='| head'
alias -g T='| tail'
alias -g B='| bat'

# Edit configuration files
alias dots='cd ~/.dotconfig/zsh'
alias evim='vi ~/.vimrc'
alias eshell='vi ~/.dotconfig/.zshrc'
alias eenv='vi ~/.dotconfig/.zshenv'

# Restart shell
alias reload='source ~/.dotconfig/.zshrc'
alias restart='exec -l "$SHELL"'

# rsync copy with progress
alias cpd='rsync -ahP $1 $2'

# Remove & Reinstall project dependecies
alias yolo="rm -rf node_modules/ && rm -f package-lock.json && yarn install"
alias nolo="rm -rf node_modules/ && rm -f package-lock.json && npm install"

### Utilities
alias myip='curl ifconfig.co'
alias kernellist="sudo dpkg --list 'linux-image*'"
# Local server
alias localserve="clear && python3 -m http.server 3000"

# TODO: ack look/install
if which ack-grep &> /dev/null; then
  alias afind='ack-grep -il'
else
  alias afind='ack -il'
fi


### Git Aliases
alias g=git
alias ga="git add"
alias gaa="git add ."
alias gc="git commit -m"
alias gb="git branch"
alias gcb="git checkout -b"
alias gdb="git branch -d"
alias gcm="git checkout master"
alias gf="git fetch"
alias gp="git push origin $(git_current_branch)"
alias gpl="git pull origin $(git_current_branch)"
alias gm="git merge"
alias gcl="git clone"
alias gcld="git clone --depth 1"
alias gdf="git diff"
alias glog="git log --oneline --decorate --graph"
alias gcf="git config --list"
alias gls="git ls-files"
alias glsg="git ls-files | grep -i"
alias grv="git remote -v"
alias gst="git status"
alias gss="git status -s"


